@model ContactModel

<h2>Dodawanie kontaktu</h2>
<form asp-action="Add" asp-controller="Contact" method="POST">
    <div class="mb-3">
        <label asp-for="Name" class="form-label text-dark"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Surname" class="form-label text-dark"></label>
        <input asp-for="Surname" class="form-control"/>
        <span asp-validation-for="Surname" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label text-dark"></label>
        <input asp-for="PhoneNumber" class="form-control"/>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label text-dark"></label>
        <input asp-for="Email" class="form-control"/>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="BirthDate" class="form-label text-dark">Data urodzenia</label>
        <input asp-for="BirthDate" class="form-control"/>
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Dodaj</button>
        @* @Html.HiddenFor(model => model.Id) *@
    </div>
</form>