@model List<ContactModel>

<h2>Kontakty</h2>
<div class="table-responsive">
    <h3>Lista kontaktów</h3>
    @if(Model.Count > 0) {
        <table class="table">
            <thead>
            <tr>
                <th>@Html.DisplayNameFor(l => l[0].Name)</th>
                <th>@Html.DisplayNameFor(l => l[0].Surname)</th>
                <th>@Html.DisplayNameFor(l => l[0].Category)</th>
                <th class="text-end">Operacje</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var contact in Model)
            {
                <tr>
                    <td>@contact.Name</td>
                    <td>@contact.Surname</td>
                    <td>@contact.Category.GetDisplayName()</td>
                    <td>
                        <a class="btn btn-success" asp-controller="Contact" asp-action="Edit">Edycja</a>
                        <a class="btn btn-info" asp-controller="Contact" asp-action="Details" asp-route-id=@contact>Szczegóły</a>
                        <a class="btn btn-danger" asp-controller="Contact" asp-action="Delete" asp-route-id=@contact>Usuń</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    } else {
        <p>Brak kontaktów!</p>
    }
</div>
<h2>Dodaj kontakt</h2>
<a class="btn btn-primary" asp-action="Add" asp-controller="Contact">Dodaj kontakt</a>