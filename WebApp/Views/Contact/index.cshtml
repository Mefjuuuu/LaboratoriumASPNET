@* @model System.Collections.Generic.Dictionary<int,WebApplication3.Models.ContactModel> *@
@using Microsoft.AspNetCore.Server.Kestrel.Core
@model List<ContactModel>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Kontakty</h2>
<a class="btn btn-primary" asp-action="Add" asp-controller="Contact">Dodaj kontakt</a>
<h4>Lista kontaktów</h4>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(l => l[0].Name)</th>
            <th>@Html.DisplayNameFor(l => l[0].Surname)</th>
            <th>@Html.DisplayNameFor(l => l[0].Category)</th>
            <th>Akcje</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var entry in Model)
        {
            <tr>
                <td>@entry.Name</td>
                <td>@entry.Surname</td>
                <td>@entry.Category.GetDisplayName()</td>
                <td>
                    <a class="btn btn-success"asp-action="Edit" asp-route-id=@entry.Id>Edycja</a>
                    <a class="btn btn-info"asp-action="Details" asp-route-id=@entry.Id>Szczegóły</a>
                    <a class="btn btn-danger" asp-controller="Contact" asp-action="Delete" asp-route-id=@entry.Id>Usuń</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <h3 class="text-danger">Coś źle zrobiłeś</h3>
}